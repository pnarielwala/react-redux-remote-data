{
  "name": "remote-data-component",
  "author": "Parth Narielwala",
  "license": "MIT",
  "homepage": "https://github.com/pnarielwala/react-redux-remote-data",
  "version": "0.2.0-alpha.1",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "files": [
    "dist"
  ],
  "scripts": {
    "start": "react-scripts start",
    "build-examples": "react-scripts build",
    "test": "react-scripts test --env=jsdom",
    "eject": "react-scripts eject",
    "build": "npm run build:clean && npm run build:lib && npm run build:flow",
    "build:clean": "rm -rf dist",
    "build:lib": "NODE_ENV=production babel src/lib --out-dir dist --copy-files --ignore __tests__,spec.js,test.js,__snapshots__",
    "build:flow": "flow-copy-source -v -i '**/__tests__/**' src/lib dist"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{js,json,scss,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-plugin-transform-flow-strip-types": "^6.22.0",
    "flow-bin": "^0.92.0",
    "flow-copy-source": "^2.0.2",
    "husky": "^1.3.1",
    "lint-staged": "^8.1.3",
    "react": "^16.3.2",
    "react-dom": "^16.3.2",
    "react-scripts": "1.1.4",
    "react-test-renderer": "^16.3.2",
    "redux-saga": "^1.0.1"
  },
  "peerDependencies": {
    "react": "^15.x || ^16.x",
    "react-dom": "^15.x || ^16.x",
    "redux-saga": "^0.x  || ^1.x"
  }
}
